{

    "manifest_version": 2,
    "name": "ChatGPT in Sidebar",
    "description": "Displays a ChatGPT sidebar.",
    "version": "1.0",
    "applications": {
        "gecko": {
            "strict_min_version": "73.0"
        }
    },
  
    "background": {
      "scripts": ["background.js"]
    },
  
    "icons": {
      "48": "icons/icon_48.svg"
    },
  
    "sidebar_action": {
        "default_icon": {
            "48": "icons/icon_48.svg"
        },
        "default_title" : "ChatGPT",
        "default_panel": "index.html"
    },
  
    "browser_action": {
        "default_icon": {
            "48": "icons/icon_48.svg"
        }
    },
  
    "permissions": [
        "storage", 
        "tabs"
    ],
  
    "commands": {
        "_execute_sidebar_action": {
            "suggested_key": {
                "default": "Ctrl+Alt+F"
            }
        }
    }
}
  